<UserControl x:Class="DanbooruTagsEditor.MVVM.View.ModifyTagsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:View="clr-namespace:DanbooruTagsEditor.MVVM.View"
             xmlns:ViewModel="clr-namespace:DanbooruTagsEditor.MVVM.ViewModel"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#272537" Loaded="UserControl_Loaded">
    <UserControl.DataContext>
        <ViewModel:ModifyTagsViewModel/>
    </UserControl.DataContext>

    <StackPanel Margin="15 0 0 0">
        <!--Title-->
        <Label Content="Modify Tags" Width="800" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                   FontSize="32" Foreground="White" FontFamily="The Font"/>

        <!--Main Content-->
        <StackPanel Width="800" Orientation="Vertical" Margin="0 0 0 10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Paste the tags on the below text box." Width="800" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Foreground="White" FontWeight="Bold" FontFamily="Verdana"/>
            <TextBlock Margin="0 10 0 0" Text="Copy and paste the Danboorou tags here, then press Submit." Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontFamily="Verdana" FontWeight="Normal"/>
            <TextBlock Text="Prees X on the right to delete." Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontFamily="Verdana" FontWeight="Normal"/>
        </StackPanel>

        <!--Tag Text Box-->
        <StackPanel Height="200">
            <View:ClearableScrollableTextBox x:Name="TagsTextBox" Foreground="NavajoWhite" FontSize="16" Height="150" Width="512" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <RadioButton x:Name="BtnSubmit" Style="{StaticResource ButtonRound}" FontSize="11" Content="Submit" HorizontalContentAlignment="Center" 
                         VerticalContentAlignment="Center" Foreground="#1e1d26" Width="100" Height="27" Margin="10" Click="BtnSubmit_Click"/>
        </StackPanel>

        <!--Modified Tags Section-->
        <StackPanel Margin="0 10 0 0">
            <Label Content="The Modified Tags:" HorizontalContentAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" FontFamily="Verdana"></Label>
            <TextBlock Text="And Voila! The program will delete the '?' and numbers at the end for you, and return those new tags here." Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontFamily="Verdana" FontWeight="Normal"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="ModifiedTagsTextBox" Text="{Binding ElementName=TagsTextBox, Path=ModifiedTags, Mode=OneWay}" IsReadOnly="True" Style="{StaticResource CustomTextBox}" 
                     Height="60" Width="512" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" 
                     AcceptsReturn="False" Margin="0 10 0 0"/>
                <Border CornerRadius="7" BorderThickness="0" Height="30" Width="30" Margin="10 0 0 0" Background="#c2c6aa">
                    <Button Background="Transparent" BorderThickness="0" Command="{Binding CopyToClipboardCommand}">
                        <Button.Content>
                            <fa:FontAwesome Icon="Clipboard"/>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip Content="{Binding ToolTipText}"/>
                        </Button.ToolTip>
                    </Button>
                </Border>

            </StackPanel>
        </StackPanel>
        
    </StackPanel>
    
</UserControl>
